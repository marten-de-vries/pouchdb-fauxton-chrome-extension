{
  "name": "PouchDB Inspector",
  "version": "0.1.2",
  "minimum_chrome_version": "10.0",
  "devtools_page": "devtools.html",
  "background": {
    "scripts": [
      "generated/postmessagerpc.js",
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
	"background",
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "generated/eval.js",
    "contentscript.js"
  ],
  "manifest_version": 2,
  "icons": {
    "128": "icon.png"
  }
}
